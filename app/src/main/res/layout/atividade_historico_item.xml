<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="@dimen/spacing_8"
    app:cardBackgroundColor="#FFFFFF"
    app:cardElevation="2dp">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="@dimen/spacing_16">

        <ImageView
            android:id="@+id/iv_atividade_resumo_percurso"
            android:layout_width="@dimen/spacing_80"
            android:layout_height="@dimen/spacing_80"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            tools:srcCompat="@tools:sample/avatars" />

        <TextView
            android:id="@+id/tv_atividade_resumo_data"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:text="TextView"
            android:textColor="@color/primariaEscuro"
            android:textSize="@dimen/text_16"
            android:textStyle="bold"
            app:layout_constraintStart_toEndOf="@+id/iv_atividade_resumo_percurso"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/tv_atividade_resumo_nome_parceiro"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:text="TextView"
            android:textColor="@color/pretoTransparente"
            android:textSize="@dimen/text_10"
            android:visibility="invisible"
            app:layout_constraintStart_toEndOf="@+id/iv_atividade_resumo_percurso"
            app:layout_constraintTop_toBottomOf="@+id/tv_atividade_resumo_data" />

        <TextView
            android:id="@+id/tv_atividade_resumo_tempo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:text="TextView"
            android:textColor="@color/pretoTransparente"
            android:textSize="14sp"
            android:textStyle="bold"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toEndOf="@+id/iv_atividade_resumo_percurso" />

        <TextView
            android:id="@+id/tv_atividade_resumo_distancia"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:text="TextView"
            android:textColor="@color/pretoTransparente"
            android:textSize="14sp"
            android:textStyle="bold"
            app:layout_constraintBottom_toTopOf="@+id/tv_atividade_resumo_tempo"
            app:layout_constraintStart_toEndOf="@+id/iv_atividade_resumo_percurso" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</com.google.android.material.card.MaterialCardView>