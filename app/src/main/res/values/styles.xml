<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.MaterialComponents.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/primaria</item>
        <item name="colorPrimaryDark">@color/primariaEscuro</item>
        <item name="colorAccent">@color/primariaClaro</item>
        <item name="android:fontFamily">@font/roboto_regular</item>
    </style>

    <style name="FormBranco">
        <item name="android:textColor">@color/branco</item>
        <item name="android:buttonTint">@color/branco</item>
    </style>

    <style name="LoginTextInputLayoutStyle" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox.Dense">
        <item name="boxStrokeColor">#fff</item>
        <item name="boxStrokeWidth">2dp</item>
    </style>



</resources>
