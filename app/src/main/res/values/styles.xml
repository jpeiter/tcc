<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.MaterialComponents.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorBackgroundFloating">@color/primaria</item>
        <item name="android:colorBackground">@color/primaria</item>
        <item name="colorPrimary">@color/primaria</item>
        <item name="colorPrimaryDark">@color/primariaEscuro</item>
        <item name="colorAccent">@color/primariaClaro</item>
        <item name="android:fontFamily">@font/roboto_regular</item>
    </style>

    <!-- Base application theme. -->
    <style name="AppThemeActionBar" parent="Theme.MaterialComponents.Light">
        <!-- Customize your theme here. -->
        <item name="colorBackgroundFloating">@color/primaria</item>
        <item name="android:colorBackground">@color/primaria</item>
        <item name="colorPrimary">@color/primaria</item>
        <item name="colorPrimaryDark">@color/primariaEscuro</item>
        <item name="colorAccent">@color/primariaClaro</item>
        <item name="android:fontFamily">@font/roboto_regular</item>
    </style>

    <style name="FormBranco">
        <item name="android:textColor">@color/branco</item>
        <item name="android:buttonTint">@color/branco</item>
    </style>

</resources>
